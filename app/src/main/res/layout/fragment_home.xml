<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:edgeToEdge="true">

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/alifia_restu_ananda"
            tools:ignore="ContentDescription" />

        <rikka.widget.borderview.BorderNestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:borderBottomVisibility="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/m3_appbar_expanded_title_margin_horizontal"
                android:paddingVertical="?dialogPreferredPadding"
                android:clipToPadding="false"
                tools:context=".ui.activity.MainActivity">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_glass"
                            android:padding="?dialogPreferredPadding">
                            <ImageView
                                android:id="@+id/status_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:tint="?colorOnPrimary"
                                app:srcCompat="@drawable/ic_round_check_circle_24"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:id="@+id/status_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_toEndOf="@id/status_icon"
                                android:text="@string/module_enabled"
                                android:textAppearance="?textAppearanceTitleMedium"
                                android:textColor="?colorOnPrimary"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/status_summary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/status_title"
                                android:layout_alignStart="@id/status_title"
                                android:textAppearance="?textAppearanceBodyMedium"
                                android:textColor="?colorOnPrimary" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/status2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_glass"
                            android:padding="?dialogPreferredPadding">
                            <ImageView
                                android:id="@+id/status_icon2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:tint="?colorOnPrimary"
                                app:srcCompat="@drawable/ic_round_check_circle_24"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:id="@+id/status_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/status_icon2"
                                android:layout_toStartOf="@id/reboot_btn"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="8dp"
                                android:text="@string/whatsapp_in_background"
                                android:textAppearance="?textAppearanceTitleMedium"
                                android:textColor="?colorOnPrimary" />
                             <TextView
                                android:id="@+id/status_summary1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/status_title2"
                                android:layout_alignStart="@id/status_title2"
                                android:textAppearance="?textAppearanceBodyMedium"
                                android:textColor="?colorOnPrimary" />
                            <ImageView
                                android:id="@+id/reboot_btn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_reload"
                                tools:ignore="ContentDescription" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                     <com.google.android.material.card.MaterialCardView
                        android:id="@+id/status3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_glass"
                            android:padding="?dialogPreferredPadding">
                            <ImageView
                                android:id="@+id/status_icon3"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:tint="?colorOnPrimary"
                                app:srcCompat="@drawable/ic_round_check_circle_24"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:id="@+id/status_title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/status_icon3"
                                android:layout_toStartOf="@id/reboot_btn2"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="8dp"
                                android:text="@string/business_in_background"
                                android:textAppearance="?textAppearanceTitleMedium"
                                android:textColor="?colorOnPrimary" />
                             <TextView
                                android:id="@+id/status_summary3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/status_title3"
                                android:layout_alignStart="@id/status_title3"
                                android:textAppearance="?textAppearanceBodyMedium"
                                android:textColor="?colorOnPrimary" />
                            <ImageView
                                android:id="@+id/reboot_btn2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_reload"
                                tools:ignore="ContentDescription" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/info_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_glass"
                            android:orientation="vertical"
                            android:padding="?dialogPreferredPadding">
                            <TextView style="@style/DeviceInfoDialogLabel" android:text="@string/android_version" />
                            <TextView android:id="@+id/sdk" style="@style/DeviceInfoDialogValue" />
                            <TextView style="@style/DeviceInfoDialogLabel" android:text="@string/device_name" />
                            <TextView android:id="@+id/device_name" style="@style/DeviceInfoDialogValue" />
                            <TextView style="@style/DeviceInfoDialogLabel" android:text="@string/device_model" />
                            <TextView android:id="@+id/model_name" style="@style/DeviceInfoDialogValue" />
                            <TextView android:id="@+id/list_wpp_title" style="@style/DeviceInfoDialogLabel" android:text="@string/list_wpp" />
                            <TextView android:id="@+id/list_wpp" style="@style/DeviceInfoDialogValue" />
                            <TextView style="@style/DeviceInfoDialogLabel" android:text="@string/list_business" />
                            <TextView android:id="@+id/list_business" style="@style/DeviceInfoDialogValue" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/backup_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/bg_glass"
                            android:orientation="vertical"
                            android:padding="?dialogPreferredPadding">
                            <TextView
                                style="@style/DeviceInfoDialogLabel"
                                android:textAlignment="center"
                                android:text="@string/backup_settings" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/importBtn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    android:text="@string/import_settings" />
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/exportBtn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:text="@string/export_settings" />
                            </LinearLayout>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/resetBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/reset_settings" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </eightbitlab.com.blurview.BlurView>

            </LinearLayout>
        </rikka.widget.borderview.BorderNestedScrollView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>